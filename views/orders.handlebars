<section class="hero is-dark is-bold">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    New order
                </h1>
                <h2 class="subtitle">
                    Fill out the form to create a new order and change your inventory.
                </h2>
            </div>
        </div>
    </section>
    <br>
    <br>
    <div class="container">
        <div class="columns is-mobile">
            <div class="column">
                <div class="card">
                    <div class="card-content">
                        <div class="content">
                            <div class="control">
                                <label class="label">Select Product</label>
                                <div class="select">
                                    <select id="select">
                                    <option>All Products</option>
                                    {{#each products}}
                                    <option id="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                                </div>
                            </div>
                            <br>
                            <div class="field">
                                <label class="label">Quantity</label>
                                <div class="control">
                                    <input id="quantity" class="input" type="text" placeholder="Must be a number.">
                                </div>
                            </div>
                            <button class="button is-dark" id="submitOrder">Submit Order</button>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="container">
        <div class="columns is-mobile">
            <div class="column">
                <div class="card">
                    <div class="card-content">
                        <div class="content" id="product-container">
                            <label class="label" id="info">Info</label>
                            <ul id="productList">
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>